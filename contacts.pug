<!DOCTYPE html>
html(lang="en")
    head

        //- The basic standard of site coding
        meta(charset="UTF-8")

        //- Adaptive website for different devices
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        //- Website title
        title Great Timber LTD - Contacts

        //- Connect the main style file
        link(rel="stylesheet", href="../css/style.css")

        //- Site tab icon
        link(rel="shortcut icon" href="../img/website-logo.png" type="image/png")

        //- Font awesome
        script(src="https://kit.fontawesome.com/265d7c8059.js" crossorigin="anonymous")

    body

        //- Header
        .header
            
            //- Logo
            .logo
                img(src="../img/fullsize-website-logo.png")

            //- Menu
            .menu
                a.menu-item(href="index.html") Homepage
                a.menu-item(href="about.html") About us
                a.menu-item(href="products.html") Products
                a.menu-item.menu-item-active(href="contacts.html") Contacts
            //- MOBILE MENU
            header.header_mobile
                .hamburger
                    button.button.hamburger__button.js-menu__toggle
                    span.hamburger__label
                
                nav.menu_mobile
                    ul.list.menu__list
                        li.menu__group
                            a(href="index.html").link.menu__link Homepage
                        li.menu__group
                            a(href="about.html").link.menu__link About us
                        li.menu__group
                            a(href="products.html").link.menu__link Products
                        li.menu__group
                            a(href="contacts.html").link.menu__link Contacts
            //- Header contacts
            .header-contacts
                .header-contact__row
                    i.fas.fa-phone
                    span +44(800) 82 9152
                .header-contacts__divider
                .header-contact__row
                    i.fas.fa-map-marked-alt
                    span Baker Street, 46B

        //- Contact box
        .contact-container
            .contact__form
                h1.green-heading Get in touch
                .contact__box
                    input.contact__input.name-input(placeholder="Name")
                    input.contact__input.phone-number-input(placeholder="Phone number")
                    input.contact__input.email-input(placeholder="E-mail")
                    input.contact__input.subject-input(placeholder="Subject")
                    textarea.contact__message.message-input(placeholder="Message")
                    .send-button
                        span.send-button__text Send message
                        i.fas.fa-paper-plane.send-button__icon
            .contact__block__divider
            .contacts
                h1.contacts__green-heading Contacts
                .contacts__box
                    .contacts-contact-container
                        .contacts__contact-title
                            i.fas.fa-phone.contacts__contact-icon
                            span.contacts__contact-heading Phone
                        .contacts__contact-list
                            span.contacts__contact-list-item +44(800) 82 9152
                            span.contacts__contact-list-item +44(800) 53 3218

                    .contacts__contact-divider

                    .contacts-contact-container
                        .contacts__contact-title
                            i.fas.fa-envelope-open-text.contacts__contact-icon
                            span.contacts__contact-heading E-mail
                        .contacts__contact-list
                            span.contacts__contact-list-item tree.company@gmail.com
                            span.contacts__contact-list-item support@gmail.com

                    .contacts__contact-divider

                    .contacts-contact-container
                        .contacts__contact-title
                            i.fas.fa-map-marked-alt.contacts__contact-icon
                            span.contacts__contact-heading Address
                        .contacts__contact-list
                            span.contacts__contact-list-item 1268 Hardesty Street Colonie, New York. 12205

        //- Beta google maps
        .google-maps

        //- Footer
        .footer
            .footer__column
                h1.green-heading Products
                span.footer__link1 Vestibulum
                span.footer__link1 Culis lacinia
                span.footer__link1 Proin dictum
                span.footer__link1 Fusce
                span.footer__link1 Conqeust
            .footer__column2
                h1.green-heading Technology
                span.footer__link2 Vatus error sivolu
                span.footer__link2 Tatem accus
                span.footer__link2 Quantum protos
                span.footer__link2 Folot atos
                span.footer__link2 Lorem ipsum
            .footer__column3
                h1.green-heading Company
                span.footer__link3 Homepage
                span.footer__link3 About us
                span.footer__link3 Products
                span.footer__link3 Contact us
            .footer__column
                .footer-contact__card
                    .footer-contact__heading Contact
                    .list-title
                        i.fas.fa-phone.footer-contact__icon
                        span.footer-contact__list-heading Phone numbers:
                    .list-item
                        .list-icon
                        span.footer-list-item +44(800) 82 9152
                    .list-item
                        .list-icon
                        span.footer-list-item +44(800) 53 3218
                    .footer-contact__divider
                    .list-title
                        i.fas.fa-envelope-open-text.footer-contact-icon
                        span.footer-contact__list-heading Emails:
                    .list-item
                        .list-icon
                        span.footer-list-item tree.company@gmail.com
                    .list-item
                        .list-icon
                        span.footer-list-item great.timber@gmail.com
        script(src="../js/index.js")